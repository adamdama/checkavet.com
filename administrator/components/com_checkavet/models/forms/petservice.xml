<?xml version="1.0" encoding="utf-8"?>
	<!--
		$Id: petservice.xml 22370 2011-11-09 16:18:06Z github_bot $
	-->
<form>
	<fieldset>
		<field name="id"  type="text" class="readonly" label="COM_CHECKAVET_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"  />

		<field name="name" type="text" label="COM_CHECKAVET_FIELD_NAME_LABEL"
			description="COM_CHECKAVET_FIELD_NAME_DESC" class="inputbox" size="30"
			required="true" />

		<field name="alias" type="text" label="COM_CHECKAVET_FIELD_ALIAS_LABEL"
			description="COM_CHECKAVET_FIELD_ALIAS_DESC" class="inputbox" size="30"
			required="false" />

		<field name="address1" type="text" label="COM_CHECKAVET_FIELD_ADDRESS1_LABEL"
			description="COM_CHECKAVET_FIELD_ADDRESS1_DESC" class="inputbox" size="45" />

		<field name="address2" type="text" label="COM_CHECKAVET_FIELD_ADDRESS2_LABEL"
			description="COM_CHECKAVET_FIELD_ADDRESS2_DESC" class="inputbox" size="45" />

		<field name="address3" type="text" label="COM_CHECKAVET_FIELD_ADDRESS3_LABEL"
			description="COM_CHECKAVET_FIELD_ADDRESS3_DESC" class="inputbox" size="45" />

		<field name="postcode" type="text" label="COM_CHECKAVET_FIELD_POSTCODE_LABEL"
			description="COM_CHECKAVET_FIELD_POSTCODE_DESC" class="inputbox" size="45" />

		<field name="county" type="text" label="COM_CHECKAVET_FIELD_COUNTY_LABEL"
			description="COM_CHECKAVET_FIELD_COUNTY_DESC" class="inputbox" size="45" />

		<field name="town" type="text" label="COM_CHECKAVET_FIELD_TOWN_LABEL"
			description="COM_CHECKAVET_FIELD_TOWN_DESC" class="inputbox" size="45" />

		<field name="region" type="text" label="COM_CHECKAVET_FIELD_REGION_LABEL"
			description="COM_CHECKAVET_FIELD_REGION_DESC" class="inputbox" size="45" />

		<field name="email" type="text" label="COM_CHECKAVET_FIELD_WEBSITE_LABEL"
			description="COM_CHECKAVET_FIELD_WEBSITE_DESC" class="inputbox" size="45" />

		<field name="website" type="text" label="COM_CHECKAVET_FIELD_EMAIL_LABEL"
			description="COM_CHECKAVET_FIELD_EMAIL_DESC" class="inputbox" size="45" />

		<field name="phone" type="text" label="COM_CHECKAVET_FIELD_PHONE_LABEL"
			description="COM_CHECKAVET_FIELD_PHONE_DESC" class="inputbox" size="45" />

		<field name="fax" type="text" label="COM_CHECKAVET_FIELD_FAX_LABEL"
			description="COM_CHECKAVET_FIELD_FAX_DESC" class="inputbox" size="45" />

		<field name="premises" type="text" label="COM_CHECKAVET_FIELD_PREMISES_LABEL"
			description="COM_CHECKAVET_FIELD_PREMISES_DESC" class="inputbox" size="45" />

		<field name="industry" type="text" label="COM_CHECKAVET_FIELD_INDUSTRY_LABEL"
			description="COM_CHECKAVET_FIELD_INDUSTRY_DESC" class="inputbox" size="45" />

		<field name="contact_title" type="text" label="COM_CHECKAVET_FIELD_CONTACT_TITLE_LABEL"
			description="COM_CHECKAVET_FIELD_PCONTACT_TITLE_DESC" class="inputbox" size="45" />

		<field name="contact_forename" type="text" label="COM_CHECKAVET_FIELD_CONTACT_FORENAME_LABEL"
			description="COM_CHECKAVET_FIELD_CONTACT_FORENAME_DESC" class="inputbox" size="45" />

		<field name="contact_surname" type="text" label="COM_CHECKAVET_FIELD_CONTACT_SURNAME_LABEL"
			description="COM_CHECKAVET_FIELD_CONTACT_SURNAME_DESC" class="inputbox" size="45" />

		<field name="contact_position" type="text" label="COM_CHECKAVET_FIELD_CONTACT_POSITION_LABEL"
			description="COM_CHECKAVET_FIELD_CONTACT_POSITION_DESC" class="inputbox" size="45" />

		<field name="logo" type="text" label="COM_CHECKAVET_FIELD_LOGO_LABEL"
			description="COM_CHECKAVET_FIELD_LOGO_DESC" class="inputbox" size="45" />

		<field name="show_logo" type="list"
			label="COM_CHECKAVET_FIELD_SHOW_LOGO_LABEL"
			description="COM_CHECKAVET_FIELD_SHOW_LOGO_DESC"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="petservicetext" type="editor" class="inputbox"
			label="COM_CHECKAVET_FIELD_PETSERVICETEXT_LABEL" description="COM_CHECKAVET_FIELD_PETSERVICETEXT_DESC"
			filter="ContentHelper::filterText" buttons="true" />

		<field name="state" type="list" label="COM_CHECKAVET_FIELD_STATUS_LABEL"
			description="COM_CHECKAVET_FIELD_STATUS_DESC" class="inputbox"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		
		<field
			name="buttonspacer"
			description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
			type="spacer" />
			
		<field name="created" type="calendar" label="COM_CHECKAVET_FIELD_CREATED_LABEL"
			description="COM_CHECKAVET_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="created_by" type="user"
			label="COM_CHECKAVET_FIELD_CREATED_BY_LABEL" description="COM_CHECKAVET_FIELD_CREATED_BY_DESC" />

		<field name="created_by_alias" type="text"
			label="COM_CHECKAVET_FIELD_CREATED_BY_ALIAS_LABEL" description="COM_CHECKAVET_FIELD_CREATED_BY_ALIAS_DESC"
			class="inputbox" size="20" />

		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_CHECKAVET_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		 />

		<field name="checked_out" type="hidden" filter="unset" />

		<field name="checked_out_time" type="hidden" filter="unset" />

		<field name="publish_up" type="calendar"
			label="COM_CHECKAVET_FIELD_PUBLISH_UP_LABEL" description="COM_CHECKAVET_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

		<field name="publish_down" type="calendar"
			label="COM_CHECKAVET_FIELD_PUBLISH_DOWN_LABEL" description="COM_CHECKAVET_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" class="inputbox" size="6"
			default="0" />

		<field name="metakey" type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL" description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox" rows="3" cols="30" />

		<field name="metadesc" type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL" description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox" rows="3" cols="30" />

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" class="inputbox" size="1" />

		<field name="hits" type="text" label="JGLOBAL_HITS"
			description="COM_CHECKAVET_FIELD_HITS_DESC" class="readonly" size="6"
			readonly="true" filter="unset" />

		<field name="featured" type="list"
			label="JFEATURED"
			description="COM_CHECKAVET_FIELD_FEATURED_DESC"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" class="inputbox" filter="rules"
			component="com_checkavet" section="petservice" validate="rules"
		/>

	</fieldset>

	<fields name="attribs">
		<fieldset name="basic" label="COM_CHECKAVET_ATTRIBS_FIELDSET_LABEL">
			<field
				name="show_hits"
				type="list"
				label="JGLOBAL_SHOW_HITS_LABEL"
				description="JGLOBAL_SHOW_HITS_DESC">
				<option	value="">JGLOBAL_USE_GLOBAL</option>
				<option	value="0">JHIDE</option>
				<option	value="1">JSHOW</option>
			</field>

			<field
				name="show_noauth"
				type="list"
				label="JGLOBAL_SHOW_UNAUTH_LINKS_LABEL"
				description="JGLOBAL_SHOW_UNAUTH_LINKS_DESC">
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
			</field>
		</fieldset>
	</fields>

	<fields name="metadata">

		<field name="robots"
			type="list"
			label="JFIELD_METADATA_ROBOTS_LABEL"
			description="JFIELD_METADATA_ROBOTS_DESC"
		>
			<option value="">JGLOBAL_USE_GLOBAL</option>
			<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
			<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
			<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
			<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
		</field>

	</fields>

</form>
